#include<iostream>
	void reverse_arr(int a[],int size){
	    if(size ==0){
	        return ;
	    }
	    else{
	        int temp;
	        int i= 0;
	        temp = a[i];
	        a[i]= a[size-1];
	        a[size -1] = temp;
	        reverse_arr(a, size-1);
	    }      
	}
	
	int main() {
	    int a[100];
	    int size ;
	
	    cout<<"Enter the size of the array: "<<endl;
	    cin>>size;
	    cout<<"Enter the elements of the array: "<<endl;
	    for(int i = 0; i<size; i++){
	        cin>>a[i]; }
	    for(int i = 0; i<size; i++){
	
	        cout<<a[i]<<"  ";}
	    cout<<endl;
	    reverse_arr(a, 3);
	    for(int i = 0; i<size; i++){
	
	        cout<<a[i]<<"  ";}
	}

